<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" placeholder="" name="postTitle" value="" autocomplete="off" required>
    </div>
    <div class="form-group">
    <label for="post" class="form-label">Post</label>
    <textarea class="form-control" name="postBody" id="post" cols="30" rows="5" placeholder="Enter Your Text"></textarea>
     </div>
    <button class="btn btn-primary mg-auto" type="submit">Publish</button>
</form>
<%- include("partials/footer") -%>